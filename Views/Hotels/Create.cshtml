@using HotelPortal.Models.HotelViewModels
@model HotelViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Register Hotel</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label col-sm-3"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control" placeholder="Hotel Name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label col-sm-3">City</label>
                <div class="col-sm-9">
                    <select list="CityId" asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label col-sm-3"></label>
                <div class="col-sm-9">
                    <input asp-for="Latitude" class="form-control" placeholder="Latitude" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label col-sm-3"></label>
                <div class="col-sm-9">
                    <input asp-for="Longitude" class="form-control" placeholder="Latitude" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label col-sm-2"></label>
                <div class="col-sm-12">
                    <textarea asp-for="Description" placeholder="Desctiption..." rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Stars" class="control-label col-sm-3">Stars</label>
                <div class="col-sm-9">
                    <select asp-for="Stars" class="form-control" asp-items="ViewBag.Stars"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Images" type="file" multiple />
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default col-md-12" />
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-default col-md-12">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}