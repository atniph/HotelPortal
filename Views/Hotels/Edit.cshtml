@using HotelPortal.Models.HotelViewModels
@model HotelEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <hr />
    <div class="row">
        <div class="col-sm-4">
            <form enctype="multipart/form-data" asp-action="Edit">
                <h2>Hotel</h2>
                <div class="form-group row" id="rooms">
                    <div class="col-sm-12">
                    </div>
                    <div class="col-sm-6" style="padding-bottom:10px">
                        <input class="btn btn-primary form-control" value="Add Room"
                               onclick="location.href='@Url.Action("Create", "Rooms", new { hotelId = Model.Id })'" />
                    </div>
                    <div class="col-sm-6">
                        <input class="btn btn-warning form-control" value="Delete"
                               onclick="location.href='@Url.Action("Delete", new { Model.Id })'"/>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group row">
                    <label asp-for="Name" class="control-label col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-3">City</label>
                    <div class="col-sm-9">
                        <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Latitude" class="control-label col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="Latitude" class="form-control" />
                        <span asp-validation-for="Latitude" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Longitude" class="control-label col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="Longitude" class="form-control" />
                        <span asp-validation-for="Longitude" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="control-label col-sm-1"></label>
                    <div class="col-sm-12">
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Stars" class="control-label col-sm-3">Stars</label>
                    <div class="col-sm-9">
                        <select asp-for="Stars" class="form-control" asp-items="ViewBag.Stars"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Images" class="control-label col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="Images" type="file" multiple />
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6" style="padding-bottom:5px">
                        <a onclick="location.href='@Url.Action("Details","Hotels",new {id=Model.Id})'" class="btn btn-default form-control">Back to hotel</a>
                    </div>
                    <div class="col-sm-6" style="padding-bottom:5px">
                        <input type="submit" value="Save" class="btn btn-primary form-control" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-8">
            <div id="images">
                <div class="col-sm-12">
                    <h2>Images:</h2>
                    <!--<label asp-for="Images" class="control-label col-sm-12"></label>-->
                </div>
                @if (ViewBag.ImageIds != null)
                 {
                    <div>
                        <!-- Bootstrap 4 cards... -->
                        <div class="flex-row row">
                            @foreach (var id in ViewBag.ImageIds)
                            {
                                <div class="col-sm-4">
                                    <div class="flex-row thumbnail">
                                        <img src="@Url.Action("HotelImage", new {imageId = id})" />
                                        <div class="caption">
                                            <p class="flex-text"></p>
                                            <p>
                                                <a class="btn btn-warning btn-block"
                                                   onclick="location.href='@Url.Action("RemoveHotelImage", new { imageId = id })'">
                                                    Remove
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                 }
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}