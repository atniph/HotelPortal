@using HotelPortal.Models.HotelViewModels
@model HotelEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Hotel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form enctype="multipart/form-data" asp-action="Edit" class="form-horizontal">
                <div class="form-group" id="rooms">
                    <input class="btn btn-default col-md-12" value="Add Room"
                           onclick="location.href='@Url.Action("Create", "Rooms", new { hotelId = Model.Id })'" />
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CityId" class="control-label col-sm-3"></label>
                    <div class="col-sm-9">
                        <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Latitude" class="control-label col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="Latitude" class="form-control" />
                        <span asp-validation-for="Latitude" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Longitude" class="control-label"></label>
                    <input asp-for="Longitude" class="form-control" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stars" class="control-label">Stars</label>
                    <select asp-for="Stars" class="form-control" asp-items="ViewBag.Stars"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Images" class="control-label"></label>
                    <input asp-for="Images" type="file" multiple />
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default col-md-12" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-default col-md-12">Back to List</a>
                </div>
            </form>
        </div>
        <div id="images">
            @if (ViewBag.ImageIds != null)
            {
                foreach (var id in ViewBag.ImageIds)
                {
                    <div class="col-md-4">
                        <input name="imageIDs" value="id" type="hidden">
                        <img class="contentImage" src="@Url.Action("HotelImage", new {imageId = id})" width="50" height="50" />
                        <input type="button" value="Remove" onclick="location.href='@Url.Action("RemoveHotelImage", new {imageId = id})'" />


                    </div>
                }
            }
        </div>
    </div>
</body>
</html>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}