@using HotelPortal.Models.BookingViewModels
@model BookingViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Bookings" asp-action="Create" asp-route-id="@Model.Room.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <tr>
                    <td colspan="3">
                        <div class="contentHead">
                            Személyes adatok:
                        </div>
                    </td>
                </tr>
                <tr>
                    <td width="120">
                        Név:
                    </td>
                    <td class="failureNotification" colspan="2">
                        <input asp-for="Name" size="40" />
                        <span asp-validation-for="Name"></span>
                    </td>

                </tr>
                <tr>
                    <td width="120">
                        Számlázási cím:
                    </td>
                    <td class="failureNotification" colspan="2">
                        <input asp-for="Address" size="40" />
                        <span asp-validation-for="Address"></span>
                    </td>
                </tr>
                <tr>
                    <td width="120">
                        E-mail cím:
                    </td>
                    <td class="failureNotification" colspan="2">
                        <input asp-for="Email" size="40" />
                        <span asp-validation-for="Email"></span>
                    </td>

                </tr>
                <tr>
                    <td width="8">
                        ID Number:
                    </td>
                    <td class="failureNotification" colspan="2">
                        <input asp-for="IDNumber" size="40" />
                        <span asp-validation-for="IDNumber"></span>
                    </td>
                </tr>
                <tr>
                    <td class="failureNotification" colspan="2">
                        <label asp-for="FirstDay" class="control-label"></label>
                        <input asp-for="FirstDay" class="form-control" />
                        <span asp-validation-for="FirstDay" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td class="failureNotification" colspan="2">
                        <label asp-for="LastDay" class="control-label"></label>
                        <input asp-for="LastDay" class="form-control" />
                        <span asp-validation-for="LastDay" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="GuestCount" class="control-label">Guests</label>
                        <select asp-for="GuestCount" class="form-control" asp-items="ViewBag.Capacity"></select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="right">
                        <input type="submit" value="Foglalás" class="button" />
                    </td>
                </tr>
            </table>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
