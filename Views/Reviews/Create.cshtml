@model HotelPortal.Models.Review

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-sm-4">
        <form asp-action="Create" asp-route-hotelId="@Model.HotelId">
            <h4>Review</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" value="@Model.SiteUser.Id">
            <input type="hidden" asp-for="HotelId" value="@Model.Hotel.Id">
            <div class="form-group row">
                <div class="col-sm-12">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-sm-12">
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <label asp-for="Stars" class="control-label">Stars</label>
                </div>
                <div class="col-sm-9">
                    <select asp-for="Stars" class="form-control" asp-items="ViewBag.Stars"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6" style="padding-bottom:10px;">
                    <a class="btn btn-default btn-block" asp-action="Index">Back to List</a>
                </div>
                <div class="col-sm-6" style="padding-bottom:10px;">
                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}